<UserControl xmlns="https://github.com/avaloniaui"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:vm="using:CustomControl.ViewModels"
        xmlns:c="using:CustomControl.Controls"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        mc:Ignorable="d" d:DesignWidth="800" d:DesignHeight="450"
        x:Class="CustomControl.Controls.CheckBlock">

    <Panel GotFocus="OnFocusHandler" LostFocus="OffFocusHandler" >
    <Grid Name="main_grid" MinWidth="100" RowDefinitions="10 * 10" ColumnDefinitions="*" >
        <!-- top bar -->
        <Grid Grid.Row="0" Height="10" Focusable="True" 
                ColumnDefinitions="* 10" RowDefinitions="10">
            <Rectangle Name="drag_rect_top" Height="10" HorizontalAlignment="Stretch" Fill="#71a049" PointerPressed="OnPointerPressed" PointerReleased="OnPointerReleased" Focusable="True"/>
            <Rectangle Name="delete_rect" Grid.Column="1" Width="10" Height="10" Fill="Red" Opacity="1" PointerReleased="DeleteThis" HorizontalAlignment="Right"/>
        </Grid>

        <!-- center -->
        <Border Name="border" BorderBrush="AliceBlue" BorderThickness="0" Grid.Row="1" >
        <Border.Background>
            <SolidColorBrush Color="#121212" Opacity="0.5" />
        </Border.Background>
        </Border>
        <Grid Grid.Row="1"
                RowDefinitions="20" ColumnDefinitions="20 *" >
            

            <Rectangle Grid.Column="0" Fill="White" Margin="4" HorizontalAlignment="Stretch" VerticalAlignment="Stretch"/>
            <Rectangle Grid.Column="0" Fill="Black" Margin="5" HorizontalAlignment="Stretch" VerticalAlignment="Stretch"/>

            <TextBox    Grid.Column="1"
                        Margin="0"
                        VerticalAlignment="Stretch" 
                        HorizontalAlignment="Stretch" 
                        Background="#D3BCC0" 
                        FontWeight="Normal"
                        TextWrapping="Wrap"
                        BorderThickness="0"
                        BorderBrush="AliceBlue"
                        Foreground="White"
                        CaretBrush="White"
                        MinWidth="50"
                        ScrollViewer.VerticalScrollBarVisibility="Hidden">
                <TextBox.Background>
                    <SolidColorBrush Color="#121212" Opacity="0" />
                </TextBox.Background>
            </TextBox>
        </Grid>

        <!-- bottom bar -->
        <Grid Grid.Row="2" RowDefinitions="10" ColumnDefinitions="* 10">
            <Rectangle Name="drag_rect_bottom" Height="10" HorizontalAlignment="Stretch" Fill="#71a049" PointerPressed="OnPointerPressed" PointerReleased="OnPointerReleased" Focusable="True"/>
            <Rectangle Name="resize_rect" Grid.Column="1" Width="10" Height="10" Fill="#458608" PointerPressed="OnPointerPressed" PointerReleased="OnPointerReleased" Focusable="True"/>
        </Grid>
    </Grid>
    </Panel>

</UserControl>

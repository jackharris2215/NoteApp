<UserControl xmlns="https://github.com/avaloniaui"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:vm="using:CustomControl.ViewModels"
        xmlns:c="using:CustomControl.Controls"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        mc:Ignorable="d" d:DesignWidth="800" d:DesignHeight="450"
        x:Class="CustomControl.Controls.NoteBlock">

    <StackPanel>
        <Rectangle Width="400" Height="10" Fill="#F2D7EE" Opacity="0.9"/>
        <TextBlock Width="400" Height="300" Background="#D3BCC0" Text="{Binding noteContent}"></TextBlock>

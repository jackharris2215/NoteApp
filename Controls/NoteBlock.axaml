<UserControl xmlns="https://github.com/avaloniaui"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:vm="using:CustomControl.ViewModels"
        xmlns:c="using:CustomControl.Controls"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        mc:Ignorable="d" d:DesignWidth="800" d:DesignHeight="450"
        x:Class="CustomControl.Controls.NoteBlock">

    <StackPanel Name="{Binding name}">
        <StackPanel.Styles>
            <Style Selector="StackPanel">
                <Setter Property="Canvas.Left" Value="{Binding position[0]}"/>
                <Setter Property="Canvas.Top" Value="{Binding position[1]}"/>
            </Style>
        </StackPanel.Styles>
        <Rectangle Width="400" Height="10" Fill="#F2D7EE" Opacity="1" PointerPressed="OnPointerPressed" PointerReleased="OnPointerReleased"/>
        <TextBox Width="400" Height="300" Background="#D3BCC0" FontSize="20" AcceptsTab="True" AcceptsReturn="True" Text="{Binding noteContent}" TextWrapping="Wrap" CornerRadius="0 0 5 5">
            <TextBox.Background>
                <SolidColorBrush Color="Azure" Opacity="0.5" />
            </TextBox.Background>
        </TextBox>
    </StackPanel>

</UserControl>

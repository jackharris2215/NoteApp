<UserControl xmlns="https://github.com/avaloniaui"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:vm="using:CustomControl.ViewModels"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        mc:Ignorable="d" d:DesignWidth="800" d:DesignHeight="450"
        x:Class="CustomControl.Controls.RectCheckBox"
        x:DataType="vm:MainWindowViewModel">

    <Grid VerticalAlignment="Stretch" HorizontalAlignment="Stretch" 
            RowDefinitions="*" ColumnDefinitions="*" Background="Red">
    
    <Rectangle Fill="White" VerticalAlignment="Stretch" HorizontalAlignment="Stretch" />
    <Rectangle Fill="Black" VerticalAlignment="Stretch" HorizontalAlignment="Stretch" Margin="1" />
    </Grid>

</UserControl>
